#include <iostream>
#include <cstdlib>
#define Tamanio 1000
using namespace std;
int matriz[Tamanio][14];

void llenarMatriz(){
    for(int i=1; i < Tamanio; i++){
        
        matriz[i][0] = matriz[i-1][0];
        matriz[i][1] = matriz[i-1][1];
        matriz[i][2] = matriz[i-1][2];
        matriz[i][3] = matriz[i-1][3];
        matriz[i][4] = matriz[i-1][4];

        matriz[i][5] = rand() % 12000;
        matriz[i][6] = rand() % 12000;
        matriz[i][7] = rand() % 60;
        
        matriz[i][4] += rand() % 45 + 15; 
        
        if(matriz[i][4] >= 60){
            matriz[i][3] += matriz[i][4] / 60;
            matriz[i][4] %= 60;
        }
        
        if(matriz[i][3] >= 24){
            matriz[i][2] += matriz[i][3] / 24;
            matriz[i][3] %= 24;
        }
        
        if(matriz[i][2] > 30){ 
            matriz[i][1] += (matriz[i][2] - 1) / 30; 
            matriz[i][2] = ((matriz[i][2] - 1) % 30) + 1; 
        }
        
        if(matriz[i][1] > 12){
            matriz[i][0] += (matriz[i][1] - 1) / 12;  
            matriz[i][1] = ((matriz[i][1] - 1) % 12) + 1; 
        }
    }
}

void mostrarMatriz(){
    for(int i=0; i < Tamanio; i++){
        cout << matriz[i][0] << " | " << matriz[i][1] << " | " << matriz[i][2] << " | " 
             << matriz[i][3] << " | " << matriz[i][4] << " | " << matriz[i][5] << " | " 
             << matriz[i][6] << " | " << matriz[i][7] << endl;
    }
}

int main(){
    
    matriz[0][0] = 2022;
    matriz[0][1] = 1;
    matriz[0][2] = 1;
    matriz[0][3] = 0;
    matriz[0][4] = 0;

    llenarMatriz();
    mostrarMatriz();

    return 0;
}
